<!DOCTYPE>
<html>
  <head>
    <title><%= title %></title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    <script src="/javascript/script.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/post.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/thread.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/form.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/quickreply.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/<%= theme %>">
  </head>
  <body onload="init('thread', '<%= board %>', <%= thread %>)">

    <div id="header">
      <div class="boardlist"></div>
      <div id="headerImage"></div>
      <div id="title">
        <h1><%= title %></h1>
      </div>
      <hr>
      <form id="threadForm" method="post" enctype="multipart/form-data" action="/upload">
        <input type="hidden" name="type" value="post">
        <input type="hidden" name="belong" value=<%= thread %>>
        <table id="submitForm">
          <tbody>
            <tr>
              <td>Name</td>
              <td>
                <input type="text" name="name" placeholder="Anonymous">
                <input type="submit" value="Post">
              </td>
            </tr>
            <tr>
              <td>Comment</td>
              <td><textarea id="threadComment" name="comment" form="threadForm"></textarea></td>
            </tr>
            <tr>
              <td>File</td>
              <td>
                <input id="selectImage" type="file" name="image">
                <span id="spoiler">[<input type="checkbox" name="spoiler">Spoiler?]</span>
              </td>
            </tr>
          </tbody>
        </table>
      </form>
      <div id="announcements">
      </div>
    </div>

    <hr>
    <div class="utils">
      [<a href="/<%= board %>/catalog">Catalog</a>]
      [<a href="/<%= board %>">Return</a>]
      [<a href="#footer">Bottom</a>]
      [<a href="./<%= thread %>">Update</a>]
    </div>

    <div id="content">
      <ul id="threads">
      </ul>
    </div>

    <script>
      $( function() {
        $( "#quickreply" ).dialog({
          autoOpen: false
        });
      } );
    </script>

    <div id="quickreply" title="Reply to thread No.<%= thread %>">
      <form id="quickreplyForm" method="post" enctype="multipart/form-data" action="/upload">
        <input type="hidden" name="type" value="post">
        <input type="hidden" name="belong" value=<%= thread %>>
        <input type="text" name="name" placeholder="Anonymous">
        <textarea id="quickreplyComment" name="comment" form="quickreplyForm"></textarea>
        <input id="selectImage" type="file" name="image">
        <span id="spoiler">[<input type="checkbox" name="spoiler">Spoiler?]</span>
        <input type="submit" value="Post">
    </div>

    <hr>
    <div class="utils">
      [<a href="/<%= board %>/catalog">Catalog</a>]
      [<a href="/<%= board %>">Return</a>]
      [<a href="#header">Top</a>]
      [<a href="./<%= thread %>">Update</a>]
    </div>

    <hr>
    <div id="footer">
      <div class="boardlist"></div>
      <div id="credits">
        Imageboard based on <a href="https://github.com/MeesCode/DevBoard">DevBoard</a> by Mees Brinkhuis.
      </div>
    </div>

  </body>
</html>
